<% layout("/layouts/boilerplate") %>
  <body>
    <div class="row mt-3">
    <div class="col-8 offset-2">
    <h3>Create New Listing</h3>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
      
      <div >
        <label for="title" class="form-label">Title</label>
        <input name="listing[title]"  type="text"  class="form-control" required/>
        <div class="invalid-feedback">
          Please choose a title.
        </div>
      </div>


      <div>
        <label for="Description" class="form-label">Description</label>
        <textarea
        name="listing[description]"
        class="form-control"
        required
      ></textarea>
      <div class="invalid-feedback">
        Please write a note.
      </div>
      </div>


      <div>
        <label for="Image" class="form-label">Image Link</label>
        <input
        name="listing[image]"
        type="file"
        class="form-control"
        required
      />
      </div>


      <div class="row">
      <div class=" col-md-4">
        <label for="price" class="form-label">Price</label>
        <input name="listing[price]"  type="text" class="form-control" required />
        <div class="invalid-feedback">
          Please choose a price.
        </div>
      </div>


      <div class=" col-md-8">
        <label for="country" class="form-label">Country</label>
        <input name="listing[country]" type="text" class="form-control" required/>
        <div class="invalid-feedback">
          Please choose a country.
        </div>
      </div>
      </div>


      <div>
        <label for="location" class="form-label">Location</label>
        <input
        name="listing[location]"
        type="text"
        class="form-control"
        required
      />
      <div class="invalid-feedback">
        Please choose a location.
      </div>
      </div>


      <button class=" btn btn-dark addbtn mt-3">Add</button>
      <br><br>
      </div>
    </form>
  </div>
  <br><br>
  </body>